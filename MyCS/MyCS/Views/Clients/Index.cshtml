@{
    ViewData["Title"] = " Upload Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

@model IEnumerable<ClientData>
@{
    Layout = null;
}

<form asp-controller="Clients" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file" value="" />
    <hr />
    <button type="submit"> Upload </button>
</form>

@if (Model.Count() > 0)
{
    <hr />
    <table cellpadding="0" cellspacing="0" border="1">
        <tr>
            <td>Account_Number</td>
            <td>Account_Type</td>
            <td>Final_Decision</td>
        </tr>
        @foreach (ClientData client in Model)
        {
            <tr>
                <td>@client.Account_Number</td>
                <td>@client.Account_Type</td>
                <td>@client.Final_Decision</td>
            </tr>
        }
    </table>
}


